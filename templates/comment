$("[value=reply]").ready(() => {
    $("[value=reply]").click( function() {
        $("[name=comment_id]",$($("form")[0])).val($("[name=id]",$(this).parent("p")).val())
        console.log($("[name=id]",$(this).parent("p")).val())
        $(".focus").toggleClass("focus")
        $(this).parent("p").toggleClass("focus")
        $("fieldset").css("display", "block");

    })
})
</script>
